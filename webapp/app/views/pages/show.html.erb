
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-1">
    <img src="<%= @page.page_pic %>" class="img-fluid img-rounded">  
  </div>
  <div class="col-lg-10">
    <h2>
      <%= @page.name %>
    </h2>    
  </div>
  <div class="col-lg-1">
    <% if @page.community? == true %>
      <i class="fa fa-institution fa-lg"></i>
    <% else %> 
      <i class="fa fa-industry fa-lg"></i>
    <% end %>
  </div>
</div>
<br>

<div class="row">
  <div class="col-lg-8">
    <p><%= markdown(@page.description) %></p>
  </div>

  <div class="col-lg-4">
      <style>
        #mapid {
            height: 225px;
            width: 100%px;
        }
      </style>
      <p>
      <h4>Contatti</h4>
      <p><%= markdown(@page.contacts) %></p>
      <h4>Links</h4>
      <p><%= markdown(@page.links) %></p>
      <h4>Sede</h4>
      <p><%= @page.location %></p>
      <p><%= @page.coordinates %></p>
      <!-- Disable location for v0.1
      <div id="mapid" class="map"></div>
       -->
  </div>
</div>

<script type="text/javascript">
    var mymap = null;

    function drawMap() {
        var sicily_coords = [37.5579, 14.1368];
        var zoom = 8;
        if (mymap){
          mymap.remove();
        }
        mymap = L.map('mapid').setView(sicily_coords, zoom);

        var OpenStreetMap_DE = L.tileLayer('http://{s}.tile.openstreetmap.de/tiles/osmde/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
        }).addTo(mymap);
    }

    drawMap();
</script>
