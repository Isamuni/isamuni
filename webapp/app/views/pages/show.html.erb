
<p id="notice"><%= notice %></p>

<h2>
  <%= @page.name %>
</h2>

<div class="row">
  <div class="col-lg-8">
    <h4>Descrizione</h4>
    <p><%= markdown(@page.description) %></p>
    <hr>
    <p>
      <strong>Contatti:</strong>
      <%= markdown(@page.contacts) %>
    </p>
    <hr>

  </div>

  <div class="col-lg-4">
      <style>
        #mapid {
            height: 225px;
            width: 100%px;
        }
      </style>
      <h4>Links</h4>
      <p><%= markdown(@page.links) %></p>
      <h4>Sede</h4>
      <p><%= @page.location %></p>
      <p><%= @page.coordinates %></p>
      <div id="mapid" class="map"></div>
  </div>
</div>

<script type="text/javascript">
    var mymap = null;

    function drawMap() {
        var sicily_coords = [37.5579, 14.1368];
        var zoom = 8;
        if (mymap){
          mymap.remove();
        }
        mymap = L.map('mapid').setView(sicily_coords, zoom);

        var OpenStreetMap_DE = L.tileLayer('http://{s}.tile.openstreetmap.de/tiles/osmde/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
        }).addTo(mymap);

    }

    drawMap();
</script>
