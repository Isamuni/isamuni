<% content_for :scripts do %>
  <script type="text/javascript">
    $(document).on('ready',function(){
      initTypeahead('/companies/typeahead', '/companies/');
    });
  </script>
<% end %>

<div class="row">
  <div class="col-md-4">
    <h1>Aziende</h1>
  </div>
  <div class="col-md-2">
    <% if current_user %>
        <%= link_to new_me_page_path, class: "btn btn-success" do %>
          <i class="fa fa-plus"></i> Azienda
        <% end %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= render partial: "search_form", locals: {res_path: companies_path, placeholder: "Ricerca aziende"}  %>
  </div>
</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Nome</th>
      <th>Sede</th>
      <th>Ambito</th>
      <th># Dipendenti</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td width="70px">
          <% if page.pic %>
              <img src="<%= page.pic 70 %>" class="img-fluid img-rounded">
          <% else %>
              <i class="fa fa-industry fa-2x"></i><br>
          <% end %>
        </td>
        <td><%= link_to page.name, page %></td>
        <td><%= page.location %></td>
        <td><%= page.sector %></td>
        <td><%= page.no_employees %></td>
        <td>
          <% if page.website.present? %>
            <%= link_to page.website, target: "_blank", class: "btn btn-primary btn-sm" do %>
              <i class="fa fa-external-link"></i>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
