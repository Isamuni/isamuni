<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-10">
    <h1>Le mie pagine</h1>
  </div>
  <div class="col-md-2">
    <%= link_to new_page_path, class: "btn btn-success btn-sm" do %>
      <i class="fa fa-plus"></i> Nuova Pagina
    <% end %>
  </div>
</div>
<br>

<table class="table table-striped table-hover table-condensed">
  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td>
          <% if page.active == true %>
            <i class="fa fa-check"></i>
          <% else %>
            <i class="fa fa-times"></i>
          <% end %>
        </td>
        <td>
          <% if page.community? == true %>
            <i class="fa fa-institution"></i>
          <% else %> 
            <i class="fa fa-industry"></i>
          <% end %>
        </td>
        
        <td><%= page.name %></td>
        <td>
          <%= link_to page_path(page), class: "btn btn-success btn-sm" do %>
            Show
          <% end %>
        </td>
        <td>
          <%= link_to edit_page_path(page), class: "btn btn-info btn-sm" do %>
            Edit
          <% end %>
        </td>
        <td>
          <%= button_to "Delete", page,
              class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

