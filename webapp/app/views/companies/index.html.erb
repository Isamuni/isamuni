<% content_for :head do %>
  <script type="text/javascript">
    $(document).on('ready',function(){
      initTypeahead('/companies/typeahead', '/companies/');
    });
  </script>
<% end %>

<div class="row">
  <div class="col-md-6">
    <h1>Aziende</h1>
  </div>
  <div class="col-md-6">
    <%= render partial: "search_form", locals: {res_path: companies_path, placeholder: "Ricerca aziende"}  %>
  </div>
</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Nome</th>
      <th>Sede</th>
      <th>Ambito</th>
      <th># Dipendenti</th>
      <th>Sito Web</th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td>
          <img src="<%= page.page_pic %>" class="img-fluid img-rounded">
        </td>
        <td><%= link_to page.name, page %></td>
        <td><%= page.location %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
