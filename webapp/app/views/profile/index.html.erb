<!-- SEARCH COMPONENT -->
<% content_for :search do %>
 <%= form_for @search, url:users_path, :method => "get" do |f| %>
    <div class="form-group">
      <div class="input-group">
          <%= f.text_field :name_like, class: 'typeahead form-control', autocomplete: 'off'%>
          <span class="input-group-btn">
            <%= button_tag type: "submit", class: "btn btn-primary" do %>
                <i class="fa fa-search"></i>
            <% end %>
          </span>
      </div>
    </div>
  <% end %>
<% end %>
<script>
$(document).ready(function(){
  initTypeahead('/users/typeahead', '/users/');
});
</script>

<!-- BODY -->
<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Occupazione</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.occupation %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-success-outline' %>
