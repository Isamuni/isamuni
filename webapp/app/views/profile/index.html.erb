<p id="notice"><%= notice %></p>

<h1>Utenti</h1>

<%= form_for @search, url:users_path, :method => "get" do |f| %>
  <div class="form-group">
    <div class="input-group">
        <%= f.text_field :name_like, class: 'typeahead form-control', autocomplete: 'off'%>
        <span class="input-group-btn">
          <%= button_tag type: "submit", class: "btn btn-primary" do %>
              <i class="fa fa-search"></i>
          <% end %>
          <%= link_to users_path, class: "btn btn-default", style: "background-color: #E0E0E0" do %>
            <i class="fa fa-refresh"></i>
          <% end %>
        </span>
    </div>
  </div>
<% end %>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Nome</th>
      <th>Occupazione</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><img src="<%= user.profile_pic %>" class="img-responsive img-rounded"></td>
        <td><%= link_to user.name, user %></td>
        <td><%= user.occupation %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-success-outline' %>

<script>
  $(document).ready(function(){
    initTypeahead('/users/typeahead', '/users/');
  });
</script>