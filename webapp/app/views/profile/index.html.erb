<!-- SEARCH COMPONENT -->
<% content_for :search do %>
  <%= form_tag users_path, :method => "get" do %>
    <div class="input-group">
        <%= text_field_tag :query, params[:query], placeholder: "Search for Users", class: 'form-control' %>
        <span class="input-group-btn">
          <%= button_tag type: "submit", class: "btn btn-default" do %>
              <i class="fa fa-search"></i>
          <% end %>
        </span>
    </div>
  <% end %>
<% end %>

<!-- BODY -->
<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Projects</th>
      <th>Links</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.description %></td>
        <td><%= user.projects %></td>
        <td><%= user.links %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-success-outline' %>
