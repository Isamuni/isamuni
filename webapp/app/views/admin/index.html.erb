<% if !@pages.empty? %>
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Kind</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= page.kind %></td>
        <td><%= link_to 'Show', page %></td>
        <td>APPROVE</td>
        <td>REJECT</td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
<p>Not much to display here :( </p>
<% end %>