<table class="table table-hover table-condensed" id="post-table">
  <thead>
    <tr>
      <th>Author</th>
      <th>Content</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.author_name %></td>
        <td><%= truncate(post.content) if post.content %></td>
        <td>modal</td>
        <td>N/A</td>
        <td>N/A</td>
      </tr>
    <% end %>
  </tbody>
</table>
