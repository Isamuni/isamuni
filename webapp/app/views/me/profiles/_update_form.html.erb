<%= form_for current_user, :url => me_profile_url, :html => { :id => "update_user_form" } do |f| %>
  <% if current_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(current_user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% current_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :name, class: "form-control", disabled: true %>
  </div>
  <div class="field">
    <%= f.label :skill_list %><br>
    <%= f.text_area :skill_list, class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :occupazione %><br>
    <%= f.text_field :occupation, class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :descrizione %><br>
    <%= f.text_area :description, class: "form-control richtext" %>
  </div>
  <div class="field">
    <%= f.label :progetti %><br>
    <%= f.text_area :projects, class: "form-control richtext" %>
  </div>
  <div class="field">
    <%= f.label 'Link e contatti' %><br>
    <%= f.text_area :links, class: "form-control richtext" %>
  </div>
  <br>
  <p class="actions">
    <%= button_tag(type: 'submit', class: "btn btn-success") do %>
      <i class="fa fa-save"></i> Aggiorna
    <% end %>
  </p>
<% end %>

<script>
var fields = document.querySelectorAll('.richtext');
for (var i = 0; i < fields.length; ++i) {
  var item = fields[i];
  var simplemde = new SimpleMDE({ element: item, spellChecker: false });
}

$('#update_user_form').validate({
        rules: {
            "user[skill_list]": {
                required: true,
            },
            "user[occupation]": {
                required: true,
            }
        }
    });
</script>
